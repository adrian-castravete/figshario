{
  "name": "figshario",
  "version": "0.1.0",
  "title": "figshario - Super Mario Clone",
  "description": "A Super Mario clone for the figshare team page.",
  "author": {
    "name": "Adrian Castravete",
    "email": "adrian@figshare.com",
    "url": ""
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "figengine": "file:../figengine",
    "uglifyjs": "^2.4.10"
  },
  "repository": "github:adrian-castravete/figshario",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "build": "browserify src/starter.js -o js/figshario.js",
    "build-min": "browserify src/starter.js | uglifyjs --compress --mangle -o js/figshario.js",
    "watch": "watchify src/starter.js -v -o js/figshario.js"
  }
}
